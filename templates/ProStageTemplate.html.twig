<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">

  <title>{% block title %}Welcome!{% endblock %}</title>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  {% block stylesheets %}
  <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
  <!-- Css Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  {% endblock %}

</head>
<body>
  <div class="container-fluid">
    <!-- bloc titre de la page  -->
    {% block header %}
    <div class="row" style="margin-top:5px;">
      <div class="col-md-12">
        <h1>{% block titrePage %}{% endblock %}</h1>
      </div>
    </div>
    {% endblock %}

    <!-- bloc menu  -->
    {% block menu %}
    <div class="row" style="margin-top:15px;">
      <div class="col-md-12">
        <nav class="navbar navbar-dark bg-dark">
          <a class="navbar-brand" href="/"><i class="icon-home"></i>Accueil</a>
          <a class="navbar-brand" href="/"><span class="navbar-text"><img src="/Img/ProStageLogo.jpg" width="90" height="45" alt="..." ></span></a>
        </nav>
      </div>
    </div>
    {% endblock %}

    <!-- bloc body  -->
    {% block body %}
    <!-- card filtre  -->
    <div class="row"style="margin-top:15px;" >
      <div class="col-md-4 col-xs-12 col-xl-3"  >
        <div class="card">
          <div class="card-header text-white bg-dark" >
            <h2 class="card-title"> Filtrer par :</h2>
          </div>
          <div class="card-body">
            <ul>
              <li><h4><a href="/entreprise" class="text-decoration-none">Entreprise</a></h4></li>
              <li><h4><a href="/formations" class="text-decoration-none">Formation</a></h4></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- bloc de contenu des pages  -->
      <div class="col-md-8 col-xs-12 col-xl-9">
        <div class="card">
          <!-- header de la card  -->
          <div class="card-header text-white bg-dark" >
            <h2 class="card-title">
              {% block titreDuContenu %}{% endblock %}
            </h2>
          </div>
          <!-- bloc de contenu  -->
          <div class="card-body">
            {% block contenu %}
            {% endblock %}
          </div>
        </div>
      </div>
    </div>

    {% endblock %}

    <!-- Css javascript -->
    {% block javascripts %}

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    {% endblock %}

  </body>


  <footer>
    <!-- Bloc footer   -->
  <div class="row" style="margin-top:15px;">
    <div class="col-md-12">
      <nav class="navbar navbar-dark bg-dark">
        <font color="white">ProStage | 2019 - 2020 | Xabi Avellan |
          Site réalisé avec les framework
          <a href="https://symfony.com/" class="text-decoration-none">Symfony</a> et
          <a href="https://getbootstrap.com/" class="text-decoration-none">Bootstrap</a>
        </font>
      </nav>
    </div>
  </div>

</footer>

</div>
</html>
